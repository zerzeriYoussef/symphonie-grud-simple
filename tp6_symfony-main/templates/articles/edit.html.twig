{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Modifier l'article</h1>
        <a href="{{ path('article_list') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Modifier {{ article.nom }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom de l\'article', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez le nom de l\'article'}}) }}
                        <div class="form-text text-danger">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-group">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez le prix'}}) }}
                            <span class="input-group-text">€</span>
                        </div>
                        <div class="form-text text-danger">
                            {{ form_errors(form.prix) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                        <div class="form-text text-danger">
                            {{ form_errors(form.category) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer les modifications
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}