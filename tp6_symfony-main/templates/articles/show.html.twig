{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Détails de l'article</h1>
        <a href="{{ path('article_list') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">{{ article.nom }}</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <h5 class="text-muted"><i class="fas fa-euro-sign me-2"></i>Prix</h5>
                                    <p class="fs-4 fw-bold text-success">{{ article.prix }} €</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <h5 class="text-muted"><i class="fas fa-tag me-2"></i>Catégorie</h5>
                                    {% if article.category is not null %}
                                        <p class="fs-5">
                                            <a href="{{ path('category_show', {'id': article.category.id}) }}" class="text-decoration-none">
                                                <span class="badge bg-info text-dark fs-6">{{ article.category.titre }}</span>
                                            </a>
                                        </p>
                                    {% else %}
                                        <p><span class="badge bg-secondary">Aucune catégorie</span></p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-1"></i> Modifier
                        </a>
                        <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-outline-danger" 
                           onclick="return confirm('Etes-vous sûr de supprimer cet article?');">
                            <i class="fas fa-trash-alt me-1"></i> Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}